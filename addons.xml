<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.Provider.Converter.github" name=" Provider Converter Mirror Repo" version="1.0.0" provider-name="StarSeed">
	<extension point="xbmc.addon.repository" name="Provider Converter Mirror Repo">
        <info compressed="false">https://raw.githubusercontent.com/Stars33d/Provider-Converter-Repo/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/Stars33d/Provider-Converter-Repo/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/Stars33d/Provider-Converter-Repo/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Provider Converter Mirror Repository</summary>
		<description>Provider Converter Mirror Repository</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.Provider.Converter"
       name="Provider Converter for Seren"
       version="1.0.2"
       provider-name="StarSeed">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.requests"/>
	<import addon="script.module.pyxbmct"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary>Seren Provider Converter</summary>
    <description>Seren Provider Converter</description>
	<assets>
		<icon>icon.png</icon>
		<fanart>fanart.jpg</fanart>
	</assets>
	<platform>all</platform>
  </extension>
</addon>
</addons>
